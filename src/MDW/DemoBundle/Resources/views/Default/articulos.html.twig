{% extends 'MDWDemoBundle::layout.html.twig' %}

{% block title%}
Listado de Articulos
{% endblock %}

{% block encabezado%}
<h1>Listado de Articulos {{articulos}}</h1>
{% endblock %}

{% block content%}
<table border="1">
    <tr>
        <th>ID</th>
        <th>Titulo</th>
        <th>Fecha de Creacion</th>
    </tr>

{% for articulo in articulos %}
    <tr>
        <td>{{articulo.id}}</td>
        <td>{{articulo.title | upper | raw}}</td>
        <td>{{articulo.created}}</td>        
    </tr>

{% endfor %}
</table>
{% endblock %}

{% block content_right%}
{% render "MDWDemoBundle:Default:articulo" with {'id' : 1}%}
{% endblock %}

